{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "test", "**/*spec.ts"]
}
